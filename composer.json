{
    "name": "c01l/phpdecorator-memo",
    "version": "1.0.0",
    "description": "The phpdecorator-memo library can be used to wrap functions to cache the results for multiple invocations.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "C01l\\PhpDecoratorMemo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "C01l\\PhpDecoratorMemo\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "c01l/phpdecorator": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "phpunit": "phpunit",
        "lint": "phpcs --standard=PSR12 src/ tests/",
        "fix-linting": "phpcbf --standard=PSR12 src/ tests/"
    }
}
